<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
>

    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/delete_item"
            tools:src="@drawable/ic_func_031"


            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"

            android:tint="@color/santan_red"
    />
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/icon_item"
            tools:src="@drawable/ic_func_052"

            app:layout_constraintStart_toEndOf="@+id/delete_item"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
    />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_item"
            tools:text="Mobile payment"

            app:layout_constraintStart_toEndOf="@+id/icon_item"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
    />
    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/slider_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="15dp"
            tools:src="@drawable/ic_sys_15"/>


</androidx.constraintlayout.widget.ConstraintLayout>